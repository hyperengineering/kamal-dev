#!/usr/bin/env ruby
# frozen_string_literal: true

#
# This is a template binstub for kamal with kamal-dev extension support.
#
# To use this in your project:
# 1. Run: bundle binstubs kamal --force
# 2. Copy the relevant bundler setup code from your generated bin/kamal
# 3. Add the kamal-dev require line before loading kamal
#

# Standard bundler setup (example - use your actual generated code)
ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../Gemfile", __dir__)

require "bundler/setup" # Set up gems listed in the Gemfile.

# IMPORTANT: Require kamal-dev to register the 'dev' subcommand
require "kamal-dev"

# Load kamal executable
load Gem.bin_path("kamal", "kamal")
